<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/stylescart.css">
    <script src="https://kit.fontawesome.com/7b924e2171.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

    <title>cebrama home&deco </title>
</head>

<body>
    <!-- Header Section -->

    <%- include('./partials/headerSection') %>

        <main>
            <div class="div-todo">
                <div class="div-all">
                    <section class="secctionconsearchnav div-tranform">
                        <header class="headerdelsection">
                            <i class="fa-solid fa-list"> Todas las categorias</i>
                        </header>
                        <div class="divconnav">
                            <nav>
                                <ul>
                                    <% for(let i=0; i < categorias.length; i++) {%>
                                        <li>
                                            <a href="/products/category/ <%= categorias[i].id %>">
                                                <%= categorias[i].name %>
                                            </a>
                                        </li>
                                        <%}%>
                                </ul>
                            </nav>
                            <button type="menu"><i class="fa-solid fa-chevron-down"></i></button>
                        </div>
                    </section>

                    <section class="sectionmainconcarrousel div-tranform">
                        <div id="contemitemscarrousel">
                            <div class="itemcarrousel" id="itemcarrousel-1">
                                <div class="tarjetacarrousel" id="tarjetacarrousel-1">
                                    <img src="/img/lata.jpeg" alt="">
                                </div>
                                <div class="flechascarrousel">
                                    <a href="#itemcarrousel-3"><i class="fa-solid fa-chevron-left"></i></a>
                                    <a href="#itemcarrousel-2"><i class="fa-solid fa-chevron-right"></i></a>
                                </div>
                            </div>
                            <div class="itemcarrousel" id="itemcarrousel-2">
                                <div class="tarjetacarrousel" id="tarjetacarrousel-2">
                                    <img src="/img/mateava.jpeg" alt="">
                                    <div class="flechascarrousel">
                                        <a href="#itemcarrousel-1"><i class="fa-solid fa-chevron-left"></i></a>
                                        <a href="#itemcarrousel-3"><i class="fa-solid fa-chevron-right"></i></a>
                                    </div>
                                </div>
                                <div class="itemcarrousel" id="itemcarrousel-3">
                                    <div class="tarjetacarrousel" id="tarjetacarrousel-3">
                                        <img src="/img/manopla.jpeg" alt="">
                                    </div>
                                    <div class="flechascarrousel">
                                        <a href="#itemcarrousel-2"><i class="fa-solid fa-chevron-left"></i></a>
                                        <a href="#itemcarrousel-1"><i class="fa-solid fa-chevron-right"></i></a>
                                    </div>
                                </div>
                            </div>

                    </section>
                    <section class="burguermenuparacelus div-tranform">
                        <div class="burger-menu">
                            <i class="fas fa-bars"></i>
                        </div>
                    </section>
                    <section class="secctionsconarticles div-contenedor">
                        <div class="div-contenido space">
                            <header class="headerdelsectiondelmain">
                                <h2>new</h2>
                            </header>

                            <% for(let i=0; i < productos.length; i++) {%>
                                <article class="article-productos">
                                    <div class="infodetail">
                                        <a href="/product/<%=productos[i].id %> ">
                                            <figure class="imgarticle">
                                                <img id="img-src" src=/img/<%=productos[i].image %> alt="">
                                            </figure>
                                            <div class="divcontodaladescripcion">
                                                <h2 class="titledescription">
                                                    <%= productos[i].name %>
                                                </h2>
                                            </div>
                                            <div class="div-precio-carrito">
                                                <p id="price">
                                                    $<%= productos[i].price %>
                                                </p>
                                                <a id="button-cartt"><i class="fa-solid fa-cart-shopping"></i></a>
                                            </div>
                                        </a>
                                    </div>
                                </article>
                             <%}%>

                        </div>
                      
                        <div class="masproductos">
                            <a href="#"><i class="fa-solid fa-chevron-down"></i></a>
                        </div>
                        
                    </section>
                   
                </div>

            </div>
            
        </main>

        <!-- Footer Section -->

        <%- include('./partials/footerSection') %>
<script src="/js/logged.js"></script>
<script src="/js/cart.js"></script>
</body>

</html>