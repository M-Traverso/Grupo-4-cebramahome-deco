<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/productsstyles.css">
    <link rel="stylesheet" href="/css/stylescart.css">
    <script src="https://kit.fontawesome.com/7b924e2171.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <title>Todos los productos</title>
</head>

<body>
    <%- include('./partials/headerSection') %>
        <main>
            <div id="content">
                <a id="fixed-button" href="/products/create"> crear <br> producto</a>
            </div>
            <section class="section-product">
                <div class="div-todo">
                    <div class="div-h2-main">
                        <h2>Productos</h2>
                    </div>

                    <% for(let i=0; i < productos.length; i++) {%>
                        <article class="article-productos">
                            <% if (locals.isLogged) { %>
                                <p id="userid" class="pid">
                                    <%= locals.userLogged.id %>
                                </p>
                                <%} else {%>
                                    <p id="userid" class="pid"></p>
                                    <%}%>
                                        <div class="infodetail">
                                            <a href="/product/<%=productos[i].id %> ">
                                                <figure class="imgarticle">
                                                    <img id="img-src" src=/img/<%=productos[i].image %> alt="">
                                                </figure>
                                                <div class="divcontodaladescripcion">
                                                    <h2 class="titledescription">
                                                        <%= productos[i].name %>
                                                    </h2>
                                                </div>
                                                <div class="div-precio-carrito">
                                                    <p id="pid" class="pid">
                                                        <%= productos[i].id %>
                                                    </p>
                                                    <p id="price">
                                                        $<%= productos[i].price %>
                                                    </p>
                                                    <a id="button-cartt"><i class="fa-solid fa-cart-shopping jump-button"></i></a>
                                                </div>
                                            </a>
                                        </div>
                        </article>
                        <%}%>

                </div>
            </section>

        </main>

        <%- include('./partials/footerSection') %>
            <script src="/js/cart.js"></script>
            <script src="/js/emailalerts.js"></script>
            <script src="/js/admin.js"></script>
</body>

</html>